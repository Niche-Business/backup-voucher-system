    loadShops()
    loadSurplusItems()
  }, [])

  const loadShops = async () => {
    try {
      const data = await apiCall('/vendor/shops')
      setShops(data.shops || [])
      if (data.shops && data.shops.length > 0) {
        setSurplusForm(prev => ({ ...prev, shopId: data.shops[0].id.toString() }))
      }
    } catch (error) {
      console.error('Failed to load shops:', error)
    }
