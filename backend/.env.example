# Flask Configuration
FLASK_ENV=production
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY
DATABASE_URL=sqlite:///instance/vcse_charity.db

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SendGrid Email Configuration (Optional - for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@bakup.org

# Twilio SMS Configuration (Optional - for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+441234567890

# Application Settings
MAX_CONTENT_LENGTH=16777216

# Generate a secure secret key with:
# python3 -c "import secrets; print(secrets.token_hex(32))"

# Stripe Payment Configuration
# Get your API keys from https://dashboard.stripe.com/apikeys
# Secret Key (NEVER expose in frontend - backend only)
# Test mode: sk_test_...
# Live mode: sk_live_...
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Webhook Secret (for verifying webhook signatures)
# Get this from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
